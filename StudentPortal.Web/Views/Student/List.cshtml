@{
}
 @model List<StudentPortal.Web.Models.Entities.Student>

<h1>All Students</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>
                    <a>Edit</a>
                </td>
            </tr>

        }
    </tbody>

</table>
